<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imgCours"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100sp"
        android:layout_marginTop="20sp"
        tools:srcCompat="@drawable/pdf" />

    <TextView
        android:id="@+id/titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="160sp"
        android:layout_marginTop="170sp"
        android:padding="10sp"
        android:text="TextView"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200sp"
        android:padding="10sp"
        android:text="Description"
        android:textSelectHandleRight="@drawable/biologie"
        android:textSize="18sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btnIns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350sp"
        android:background="#4CAF50"
        android:padding="10sp"
        android:text="S'inscrire"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />


</RelativeLayout>